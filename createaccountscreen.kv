<CreateAccountScreen>:
    FloatLayout:
        ThemedButton:
            size_hint: .05, .05
            pos_hint: {"top": 1-self.size_hint_y, "right": 2*self.size_hint_x}
            text: "X"
            on_release:
                root.parent.current = root.parent.current = "welcome_screen"

        ThemedInput:
            id: email
            text: "test@gmail.com"
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "top": .85}
            hint_text: "Email"

        ThemedInput:
            id: password
            text: "123456"
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "top": .7}
            hint_text: "Password"
            password: True

        ThemedButton:
            text: "[u]Create Account[/u]"
            size_hint: .4 ,.1
            pos_hint: {"center_x": .75, "top": .55}
            on_release:
                # Need to refer to the FirebaseLoginScreen
                root.parent.parent.sign_up(email.text, password.text)
                animate(message, opacity=0, duration=0.5)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True

        ThemedMessage:
            id: message
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "center_y": .1}
            opacity: 0
            on_text:
                animate(self, opacity=1, duration = 0.5)

        ThemedButton:
            id: sign_in_button
            text: "[u]Sign in[/u]"
            size_hint: .2 ,.05
            pos_hint: {"right": .85, "center_y": .1}
            opacity: 0
            disabled: True
            on_release:
                root.parent.current = "sign_in_screen"
                root.parent.parent.ids.sign_in_screen.ids.email.text = email.text
                root.parent.parent.ids.sign_in_screen.ids.password.text = password.text


