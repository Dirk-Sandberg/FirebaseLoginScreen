#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<FirebaseLoginScreen>:
    background: ""
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: root.background
    on_email_exists:
        create_account_screen.ids.sign_in_button.disabled = False
        create_account_screen.ids.sign_in_button.opacity = 1

    on_email_not_found:
        sign_in_screen.ids.sign_in_button.disabled = False
        sign_in_screen.ids.sign_in_button.opacity = 1

    ScreenManager:
        id: screen_manager
        WelcomeScreen:
            id: welcome_screen
            name: "welcome_screen"
        SignInScreen:
            id: sign_in_screen
            name: "sign_in_screen"
        CreateAccountScreen:
            id: create_account_screen
            name: "create_account_screen"
