<FirebaseLoginScreen>:
    background: ""
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: root.background
    on_email_exists:
        sign_up_screen.ids.sign_in_button.disabled = False
        sign_up_screen.ids.sign_in_button.opacity = 1

    on_email_not_found:
        sign_in_screen.ids.sign_in_button.disabled = False
        sign_in_screen.ids.sign_in_button.opacity = 1

    ScreenManager:
        id: screen_manager
        WelcomeScreen:
            id: welcome_screen
            name: "welcome_screen"
        SignInScreen:
            id: sign_in_screen
            name: "sign_in_screen"
        SignUpScreen:
            id: sign_up_screen
            name: "sign_up_screen"
