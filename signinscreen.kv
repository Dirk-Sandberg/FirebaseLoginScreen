<SignInScreen>:
    FloatLayout:
        ThemedButton:
            size_hint: .05, .05
            pos_hint: {"top": 1-self.size_hint_y, "right": 2*self.size_hint_x}
            text: "X"
            on_release:
                root.parent.current = root.parent.current = "welcome_screen"

        ThemedInput:
            id: email
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "top": .85}
            hint_text: "Email"

        ThemedInput:
            id: password
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "top": .7}
            hint_text: "Password"
            password: True

        ThemedButton:
            text: "[u]Reset Password[/u]"
            size_hint: .4 ,.1
            pos_hint: {"center_x": .25, "top": .55}
            on_release:
                # Need to refer to the FirebaseLoginScreen
                root.parent.parent.reset_password(email.text)
                Animation(opacity=0, duration=0.5).start(message)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True
                root.parent.parent.display_loading_screen()


        ThemedButton:
            text: "[u]Log In[/u]"
            size_hint: .4 ,.1
            pos_hint: {"center_x": .75, "top": .55}
            on_release:
                # Need to refer to the FirebaseLoginScreen
                root.parent.parent.sign_in(email.text, password.text)
                Animation(opacity=0, duration=0.5).start(message)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True
                root.parent.parent.display_loading_screen()

        ThemedMessage:
            id: message
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "center_y": .1}
            opacity: 0
            on_text:
                Animation(opacity=1, duration=0.5).start(self)

        ThemedButton:
            id: sign_in_button
            text: "[u]Sign up[/u]"
            size_hint: .2 ,.05
            pos_hint: {"right": .85, "center_y": .1}
            opacity: 0
            disabled: True
            bg_color: (0,0,0,0)
            on_release:
                root.parent.current = "create_account_screen"
                root.parent.parent.ids.create_account_screen.ids.email.text = email.text
                root.parent.parent.ids.create_account_screen.ids.password.text = password.text
