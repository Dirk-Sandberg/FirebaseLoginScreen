#:include FirebaseLoginScreen/welcomescreen.kv
#:include FirebaseLoginScreen/themedwidgets.kv
#:include FirebaseLoginScreen/signinscreen.kv
#:include FirebaseLoginScreen/createaccountscreen.kv
#:import FirebaseLoginScreen FirebaseLoginScreen.firebaseloginscreen.FirebaseLoginScreen
#:import animate FirebaseLoginScreen.animator.animate

<FirebaseLoginScreen>:
    on_sign_up_error_msg:
        create_account_screen.ids.error_message.text = self.sign_up_error_msg
    on_email_exists:
        create_account_screen.ids.sign_in_button.disabled = False
        create_account_screen.ids.sign_in_button.opacity = 1
    ScreenManager:
        id: screen_manager
        WelcomeScreen:
            id: welcome_screen
            name: "welcome_screen"
        SignInScreen:
            id: sign_in_screen
            name: "sign_in_screen"
        CreateAccountScreen:
            id: create_account_screen
            name: "create_account_screen"
