<WelcomeScreen>:
    FloatLayout:
        ThemedButton:
            id: log_in_button
            size_hint: .9, .1
            pos_hint: {"top": .4, "center_x": .5}
            text: "[u]Sign In[/u]"
            on_release:
                #root.parent.transition = SlideTransition()
                root.parent.current = "sign_in_screen"

        ThemedButton:
            id: create_account_button
            size_hint: .9, .1
            pos_hint: {"top": .25, "center_x": .5}
            text: "[u]Create Account[/u]"
            on_release:
                root.parent.current = "create_account_screen"


